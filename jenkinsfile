pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Use 'def' to avoid variable scope warnings
                    def dockerImage = docker.build("my-app:7")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Use the Docker image with Linux paths/commands
                    docker.image("my-app:7").inside {
                        // Use 'sh' for Linux containers
                        sh 'echo "Running tests..."'
                        sh 'curl -sSf http://localhost:80' // Example test command
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("my-app:7").push()
                    }
                }
            }
        }
    }
}