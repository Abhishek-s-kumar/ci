pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define variable properly with 'def'
                    def dockerImage = docker.build("my-app:8")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Use 'docker.image().inside' for Linux containers
                    docker.image("my-app:8").inside {
                        // Use 'sh' for Linux commands
                        sh 'echo "Testing container..."'
                        sh 'curl -sSf http://localhost:80'
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("my-app:8").push()
                    }
                }
            }
        }
    }
}