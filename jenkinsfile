pipeline {
  agent any  // or agent { docker { image 'node:14-alpine' } }

  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')  // Store credentials in Jenkins
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          dockerImage = docker.build("your-dockerhub-username/your-app:${env.BUILD_ID}")
        }
      }
    }

    stage('Test') {
      steps {
        sh 'docker run your-dockerhub-username/your-app:${env.BUILD_ID} npm test'
      }
    }

    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds') {
            dockerImage.push()
          }
        }
      }
    }
  }

  post {
    always {
      sh 'docker rmi your-dockerhub-username/your-app:${env.BUILD_ID}'
    }
  }
}